---
import { Code } from "astro:components";
import { toPlain } from "../../libs/syntax";
import CodeViewer from "./CodeViewer.astro";
const { codes } = Astro.props;
const plain = await toPlain(codes.code);
---

<div
	class="mockup-browser bg-base-300 border border-base-200"
	onclick={`_${codes.id}.showModal()`}
>
	<div class="mockup-browser-toolbar">
		<div>{codes.title}</div>
	</div>
	<Code
		code={(() => {
			let limitedCode = null;
			const lines = plain.split("\n");
			if (lines.length > 15) {
				// 15行より多い場合は切り詰める
				limitedCode = lines.slice(0, 16).join("\n");
			} else {
				// 15行より少ない場合は空行を追加
				const emptyLinesToAdd = 18 - lines.length;
				limitedCode = lines.concat(Array(emptyLinesToAdd).fill("")).join("\n");
			}
			return limitedCode;
		})()}
		lang={codes.lang.toLowerCase()}
	/>
</div>

<dialog id={`_${codes.id}`} class="modal">
	<div class="modal-box max-w-none w-5/6 rounded-2xl">
		<CodeViewer codes={codes} />
	</div>
	<form method="dialog" class="modal-backdrop">
		<button>close</button>
	</form>
</dialog>
