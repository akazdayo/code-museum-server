---
import CodeViewer from "./CodeViewer.astro";
const { codes } = Astro.props;
---

<!-- Open the modal using ID.showModal() method --><!-- Open the modal using ID.showModal() method -->
<button class="btn" onclick={`_${codes.id}.showModal()`}>open modal</button>
<dialog id={`_${codes.id}`} class="modal">
	<div class="modal-box max-w-none w-5/6 rounded-2xl">
		<CodeViewer codes={codes} />
	</div>
	<form method="dialog" class="modal-backdrop">
		<button>close</button>
	</form>
</dialog>
